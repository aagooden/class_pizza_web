<h1>Your order so far...</h1>
<div class="center">
<%count = 1%>
<% session[:full_order].each do |order| %>
<h1>Pizza <%=count%></h1>
  <h2>Size:  <%= order[0][0] %></h2>
  <p></p>
  <h2>Crust:  <%= order[1][0] %></h2>
  <p></p>
  <h2>Sauce:  <%= order[2][0] %></h2>
  <p></p>
  <h2><u>Meats: </u></h2>
  <p></p>
  <%if order[3][0] == nil%>
    <h2>None</h2>
  <%else%>
      <%order[3][0].each do |meat|%>
        <img src="<%= meat %>.jpg">
      <% end %>
  <% end %>
  <br>
  <br>
  <h2><u>Toppings: </u></h2>
  <p></p>
  <%if order[4][0] == nil%>
    <h2>None</h2>
  <%else%>
      <%order[4][0].each do |topping|%>
        <img src="<%= topping %>.jpg">
      <% end %>
  <% end %>
  <%count += 1%>
  <br>
  <br>
  <h3>_________________________________________</h3>
<% end %>
</div>
<br>
<form class="" action="another" method="post">
  <input type="submit" value="Order Another Pizza">
</form>

<form class="" action="delivery" method="get">
  <input type="submit" name="" value="Complete Your Order">
</form>
